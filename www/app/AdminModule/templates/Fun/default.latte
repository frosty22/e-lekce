{block content}
<h1>IT vtipy</h1>


{control addJoke}


<table class="table table-striped">
	<thead>
	<tr>
		<th>ID</th>
		<th>Přidáno</th>
		<th>Text</th>
		<th>Možnosti</th>
	</tr>
	</thead>
	<tbody>
	{foreach $jokes as $joke}
	<tr>
		<td>{$joke->joke_id}</td>
		<td>{$joke->added|date:"d.n.Y H:i"}</td>
		<td>{$joke->text}</td>
		<td><a n:href="delete!, id => $joke->joke_id" class="btn btn-small btn-danger">odstranit</a></td>
	</tr>
	{/foreach}
	</tbody>
</table>

{control paginator}