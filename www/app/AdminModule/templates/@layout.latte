<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="robots" content="{$robots}" n:ifset="$robots">

	<title>Administrace</title>
       
	<link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/bootstrap.min.css">
        <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/font-awesome.css">
        <link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/own.css">
        <!--[if IE 7]><link rel="stylesheet" href="{$basePath}/css/font-awesome-ie7.css"><![endif]-->
	<link rel="shortcut icon" href="{$basePath}/favicon.ico">

	<script src="http://code.jquery.com/jquery-1.8.1.min.js"></script>   
	<script src="{$basePath}/js/netteForms.js"></script>
        
	{block head}{/block}
</head>
<body>
    
<script> document.body.className+=' js' </script>

<header class="navbar navbar-fixed-top">
 <div class="navbar-inner">
  <div class="container">
    <a class="brand" n:href=":Front:Homepage:">E-Lekce.cz ~ Administrace</a>

    <ul class="nav pull-right">
      <li><a n:href=":Front:Homepage:"><i class="icon-home"></i> Hlavní strana</a></li>
      
      {if $user->isLoggedIn()}
	<li><a n:href=":Admin:Sign:out"><i class="icon-user"></i> Odhlásit se</a></li>
      {else}
	<li><a n:href=":Admin:Sign:in"><i class="icon-user"></i> Přihlásit se</a></li>      
      {/if}
	
    </ul>

  </div>
 </div>
</header>

<section id="page" class="container">   
 <div class="row">
  <div class="span10">

    <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">{$flash->message}</div>

    {include #content}    

  </div>
  <div id="column-right" class="span2">
    

    <h3>Kategorie</h3>
    <nav>	
      <ul class="nav nav-list">   
        <li><a n:href=":Admin:Category:"><i class="icon-chevron-right"></i> Kategorie</a></li>
		<li><a n:href=":Admin:Author:"><i class="icon-chevron-right"></i> Autoři</a></li>
		<li><a n:href=":Admin:Article:"><i class="icon-chevron-right"></i> Články</a></li>
		<li><a n:href=":Admin:Feed:"><i class="icon-chevron-right"></i> Feedy</a></li>
		<li><a n:href=":Admin:Fun:"><i class="icon-chevron-right"></i> Vtipy</a></li>
      </ul>
      <hr />
    </nav>



  </div>
 </div>
</section>


<footer class="container">
  <hr />
  <div class="row">
     <div class="span6 pull-right right">Copyright 2012 &copy; <a href="http://www.webcreating.cz">WebCreating.cz</a></div>
  </div>
</footer>


</body>
</html>